<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TopScoreActivity"
    android:orientation="vertical">


    <TextView
        android:id="@+id/txtCaption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Top score"
        android:textColor="@color/colorWhite"
        android:textSize="26dp" />

    <TextView
        android:id="@+id/txtCaptionTopScoreInEasyGame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Easy game:"
        android:textColor="@color/colorWhite"
        android:textSize="16dp" />

    <TableLayout
        android:id="@+id/gridForEasyGame"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:background="@color/colorWhite"
        android:cacheColorHint="#00000000"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:divider="@android:color/black" >
    </TableLayout>

    <TextView
        android:id="@+id/txtCaptionTopScoreInNormalGame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Normal game:"
        android:textColor="@color/colorWhite"
        android:textSize="16dp" />

    <TableLayout
        android:id="@+id/gridForNormalGame"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:background="@color/colorWhite"
        android:cacheColorHint="#00000000"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:divider="@android:color/black" >
    </TableLayout>

    <TextView
        android:id="@+id/txtCaptionTopScoreInHardGame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Hard game:"
        android:textColor="@color/colorWhite"
        android:textSize="16dp" />

    <TableLayout
        android:id="@+id/gridForHardGame"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:background="@color/colorWhite"
        android:cacheColorHint="#00000000"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:divider="@android:color/black" >
    </TableLayout>

    <Button
        android:id="@+id/btnHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Home"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="95dp"
        android:layout_marginRight="95dp"/>


</LinearLayout>