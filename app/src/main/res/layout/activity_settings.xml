<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SettingsActivity">

    <TextView
        android:id="@+id/txtCaption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Settings game"
        android:textColor="@color/colorWhite"
        android:textSize="26dp" />

    <TextView
        android:id="@+id/txtBackGroundLight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Your name in game:"
        android:textColor="@color/colorWhite"
        android:textSize="16dp" />

    <EditText

        android:id="@+id/txtPlayerName"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        android:background="@color/colorWhite"
        android:textSize="14dp"/>

    <TextView
        android:id="@+id/txtCaptionSelectBackground"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select background:"
        android:textColor="@color/colorWhite"
        android:textSize="16dp" />

    <CheckBox
        android:id="@+id/chkLightBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Light background"
        android:checked="true"
        android:textColor="@color/colorWhite"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="120dp"
        android:layout_marginTop="10dp"/>

</LinearLayout>